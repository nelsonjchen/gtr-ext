{
  "manifest_version": 3,
  "name": "Gargantuan Takeout Rocket Extension Helper",
  "version": "0.1.0",
  "author": "Nelson Chen",
  "description": "Extension to help with evacuating Google Takeout files to Azure.",
  "permissions": ["notifications", "downloads", "storage"],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "build/background.js"
  },
  "icons": {
    "192": "logo192.png",
    "512": "logo512.png"
  },
  "action": {
    "default_icon": {
      "192": "logo192.png",
      "512": "logo512.png"
    },
    "default_title": "Popup",
    "default_popup": "popup.html"
  }
}
